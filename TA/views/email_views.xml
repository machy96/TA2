<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_email_form" model="ir.ui.view">
    <field name="name">ta.email.form</field>
    <field name="model">ta.email</field>
    <field name="arch" type="xml">
        <form string="E-mail">
            <sheet>
                <group>
                    <field name="subject"/>
                    <field name="email_from"/>
                    <field name="email_to"/>
                    <field name="received_date"/>
                    <field name="numero_dum_extracted"/>
                    <field name="dossier_id"/>
                </group>
            </sheet>
        </form>
    </field>
</record>
    <!-- Vue Liste pour ta.email -->
    <record id="view_email_list" model="ir.ui.view">
        <field name="name">ta.email.list</field>
        <field name="model">ta.email</field>
        <field name="arch" type="xml">
            <tree string="E-mails Entrants">
                <field name="subject"/>
                <field name="email_from"/>
                <field name="email_to"/>
                <field name="received_date"/>
                <field name="dossier_id"/>
            </tree>
        </field>
    </record>


    <!-- Menu pour accéder à la liste des e-mails -->
    <menuitem id="menu_email_list"
              name="E-mails Entrants"
              parent="menu_dossier"
              action="action_email_list"
              sequence="10"/>

</odoo>