<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vue Liste pour ta.email -->
    <record id="view_email_list" model="ir.ui.view">
        <field name="name">ta.email.list</field>
        <field name="model">ta.email</field>
        <field name="arch" type="xml">
            <tree string="E-mails Entrants">
                <field name="subject"/>
                <field name="email_from"/>
                <field name="email_to"/>
                <field name="received_date"/>
                <field name="dossier_id"/>
            </tree>
        </field>
    </record>

    <!-- Action pour ouvrir la vue liste des e-mails -->
    <record id="action_email_list" model="ir.actions.act_window">
        <field name="name">E-mails Entrants</field>
        <field name="res_model">ta.email</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_email_list"/>
    </record>
    <!-- Menu pour accÃ©der Ã  la liste des e-mails -->
    <menuitem id="menu_email_list"
              name="E-mails Entrants"
              parent="menu_dossier"
              action="action_email_list"
              sequence="10"/>

</odoo>