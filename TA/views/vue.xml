<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_email_import_form" model="ir.ui.view">
        <field name="name">email.import.form</field>
        <field name="model">email.import</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="gmail_id"/>
                        <field name="sender"/>
                        <field name="recipient"/>
                        <field name="cc"/>
                        <field name="bcc"/>
                        <field name="subject"/>
                        <field name="body_text"/>
                        <field name="body_html"/>
                        <field name="date_received"/>
                        <field name="attachments"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>